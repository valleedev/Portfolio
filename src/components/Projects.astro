---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import ReactIcon from "./icons/React.astro"
import NodeJSIcon from "./icons/NodeJS.astro"
import MySQLIcon from "./icons/MySQL.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-blue-500 text-white",
    icon: ReactIcon,
  },
  NODE: {
    name: "Node.js",
    class: "bg-green-600 text-white",
    icon: NodeJSIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#00618A] text-white",
    icon: MySQLIcon,
  },
}
const PROJECTS = [
  {
    title: "Perfumeria Palomino - Gestor de Ventas",
    description:
      "Gestor de ventas para una perfumeria de la Belén de Umbría, Colombia. Permite gestionar las ventas, clientes, productos, proveedores y generación de reportes.",
    image: "/projects/perfumeriapalomino.jpeg",
    tags: [TAGS.REACT, TAGS.NODE, TAGS.TAILWIND],
  },
  {
    title: "Auto-Notion-Scheduler - Automatización de tareas en Notion",
    description:
      "Automatización de tareas en Notion. Creada desde cero con Node.js y la API de Notion enfocada en la automatización de mis tareas diarias.",
    image: "/projects/autonotion.png",
    github: "https://github.com/valleedev/auto-notion-scheduler",
    tags: [TAGS.NODE],
  },
  {
    title: "SENAG - Sistema de seguimiento acádemico",
    description:
      "Sistema de seguimiento acádemico desarrollado como proyecto final para la carrera Tecnología en Análisis y Desarrollo de Software. Enfocada en realizar seguimiento a las compotencias de los aprendices del SENA.",
    image: "/projects/senag.png",
    link: "https://senag.app/",
    tags: [TAGS.NODE, TAGS.REACT, TAGS.TAILWIND, TAGS.MYSQL],
  },
  {
    title: "TalentoYa landing page - Gestión de talento humano",
    description:
      "Landing page desarrollada para atraer empresas y pymes a que usen la plataforma de TalentoYa. Con la finalidad de que puedan gestionar mejor el talento humano de sus empresas.",
    image: "/projects/talentoYa.png",
    github: "https://github.com/valleedev/YalentoYa-Landing",
    link: "https://talentoya.jsvb.dev",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
              alt={`Captura del proyecto ${title}`}
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {
                tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                      <tag.icon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                ))
              }
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {
                github && (
                  <LinkButton href={github}>
                    <GitHub class="size-6" />
                    Code
                  </LinkButton>
                )
              }
              {
                link && (
                  <LinkButton href={link}>
                    <Link class="size-4" />
                    Preview
                  </LinkButton>
                )
              }
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>



